# Security Configuration
audit-level=moderate
fund=false
save-exact=true

# Performance and reliability
engine-strict=true
prefer-offline=true
package-lock=true

# Registry configuration (secure HTTPS only)
registry=https://registry.npmjs.org/

# Disable scripts for security (can be overridden with --ignore-scripts=false)
ignore-scripts=false

# Progress and logging
progress=true
loglevel=warn

# Cache configuration for security
# Note: cache-max is deprecated, using prefer-offline instead (set above)