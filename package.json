{
  "name": "bitcoin-benefit",
  "version": "1.0.0",
  "description": "A comprehensive Bitcoin vesting calculator and benefits platform for employee compensation",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bitcoin_benefit.git"
  },
  "keywords": [
    "bitcoin",
    "vesting",
    "employee-benefits",
    "compensation",
    "cryptocurrency",
    "nextjs",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.20.4",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "export": "next build",
    "deploy": "npm run export && netlify deploy --prod --dir=out",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "vitest run src/**/*.performance.test.{ts,tsx}",
    "test:performance:watch": "vitest watch src/**/*.performance.test.{ts,tsx}",
    "test:performance:ui": "vitest --ui src/**/*.performance.test.{ts,tsx}",
    "benchmark": "vitest run src/**/performance/performanceValidation.test.ts",
    "benchmark:report": "vitest run src/**/performance/performanceValidation.test.ts --reporter=verbose",
    "test:all": "npm run test && npm run test:performance",
    "validate:optimizations": "vitest run src/**/performance/ --reporter=verbose"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.2",
    "@heroicons/react": "^2.1.5",
    "@hookform/resolvers": "^3.9.0",
    "date-fns": "^3.6.0",
    "next": "^14.2.31",
    "numeral": "^2.0.6",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.1",
    "recharts": "^2.12.7",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20",
    "@types/numeral": "^2.0.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.40",
    "ts-node": "^10.9.2",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0"
  }
}
