{
  "name": "bitcoin-benefit",
  "version": "1.0.0",
  "description": "A comprehensive Bitcoin vesting calculator and benefits platform for employee compensation",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bitcoin_benefit.git"
  },
  "keywords": [
    "bitcoin",
    "vesting",
    "employee-benefits",
    "compensation",
    "cryptocurrency",
    "nextjs",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=20.18.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/generate-static-data.js",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' next build",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "export": "next build",
    "deploy": "npm run build && netlify deploy --prod",
    "update-bitcoin-data": "node scripts/update-bitcoin-data.js",
    "update-bitcoin-year": "node scripts/update-bitcoin-data.js --year=",
    "clear-bitcoin-cache": "node scripts/update-bitcoin-data.js --clear-cache-only",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run src/**/*.performance.test.{ts,tsx}",
    "test:performance:watch": "vitest watch src/**/*.performance.test.{ts,tsx}",
    "test:performance:ui": "vitest --ui src/**/*.performance.test.{ts,tsx}",
    "benchmark": "vitest run src/**/performance/performanceValidation.test.ts",
    "benchmark:report": "vitest run src/**/performance/performanceValidation.test.ts --reporter=verbose",
    "test:all": "vitest run",
    "validate:optimizations": "vitest run src/**/performance/ --reporter=verbose",
    "test:validate": "node scripts/test-validation/test-file-validator.ts",
    "test:health": "node scripts/test-validation/test-health-monitor.ts",
    "test:dashboard": "node scripts/test-validation/dashboard.ts report",
    "test:maintenance": "node scripts/test-validation/dashboard.ts maintenance",
    "test:fix-strings": "node scripts/test-string-normalizer.ts",
    "test:fix-issues": "node scripts/fix-test-issues.js",
    "test:hooks:install": "node scripts/test-validation/pre-commit-setup.ts install",
    "test:hooks:remove": "node scripts/test-validation/pre-commit-setup.ts remove",
    "test:hooks:status": "node scripts/test-validation/pre-commit-setup.ts status"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.2",
    "@heroicons/react": "^2.1.5",
    "@hookform/resolvers": "^3.9.0",
    "@types/react-window": "^1.8.8",
    "autoprefixer": "^10.4.19",
    "bitcoin-address-validation": "^3.0.0",
    "date-fns": "^3.6.0",
    "next": "^14.2.31",
    "numeral": "^2.0.6",
    "postcss": "^8.4.40",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.1",
    "react-window": "^1.8.11",
    "recharts": "^2.12.7",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^20",
    "@types/numeral": "^2.0.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "glob": "^11.0.3",
    "jsdom": "^26.1.0",
    "ts-node": "^10.9.2",
    "vitest": "^3.2.4"
  }
}
